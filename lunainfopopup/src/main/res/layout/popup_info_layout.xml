<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:ignore="UseCompoundDrawables">

    <ImageView
        android:id="@+id/imageViewTriangleUp"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_ui_caret_up"
        android:visibility="gone"
        tools:ignore="ContentDescription" />

    <TextView
        android:id="@+id/textViewContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/imageViewTriangleUp"
        android:layout_gravity="start|center_vertical"
        android:layout_marginStart="12dp"
        android:layout_marginEnd="12dp"
        android:gravity="start|center_vertical"
        tools:ignore="RtlSymmetry" />

    <ImageView
        android:id="@+id/imageViewTriangleDown"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_below="@id/textViewContent"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_ui_caret_down"
        android:visibility="gone"
        tools:ignore="ContentDescription" />
</RelativeLayout>